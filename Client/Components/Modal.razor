@using MudBlazor

<!-- Modal -->
<div class="modal fade" id="@ModalId" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="false">
  <div class="modal-dialog modal-dialog-centered show">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title" id="modalLabel">@Title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        @Content
      </div>

      <div class="d-flex justify-content-end p-2">
        <MudButton Color="Color.Primary" data-bs-dismiss="modal">Cancel</MudButton>
      </div>
      
    </div>
  </div>
</div>

@code {
    [Parameter] public RenderFragment Content { get; set; }
    [Parameter] public string ModalId { get; set; }
    [Parameter] public string Title { get; set; }
}